{
	"name": "Responsively Helper",
	"version": "0.0.1",
	"description": "An extension to open current browser page in Responsively app",
	"homepage_url": "http://manojvivek.github.io/responsively-app",
	"manifest_version": 2,
	"icons": {
		"128": "logo_128.png",
		"48": "logo_48.png",
		"16": "logo_16.png"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	},
	"browser_action": {
    "default_icon": "logo_128.png",
    "default_title": "Open page in Responsively app"
	},
	"permissions": [
		"activeTab"
 ]
}
